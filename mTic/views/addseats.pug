extends layout

block content
  
  link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css', integrity='sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ', crossorigin='anonymous')
  script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js', integrity='sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn', crossorigin='anonymous')
  
  
  
  html
  head
  
  body(style='background-image: url("bg3.jpg"); background-repeat: no-repeat; background-size:100%;')
    nav.navbar.navbar-toggleable-md.navbar-inverse(style='background-color: #660033;').bg-faded
      button.navbar-toggler.navbar-toggler-right(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      |   
      a.navbar-brand(href='/') Movie Tickets
      |
  
      #navbarNav.collapse.navbar-collapse
        ul.navbar-nav 
          li.nav-item
            a.nav-link(href='/addmovie') 
              | Add Movie
          |       
          li.nav-item
            a.nav-link(href='/addtheatre')  
              | Add Theatre
              
          li.nav-item
            a.nav-link(href='/addhall') Add Hall
           
          |       
          li.nav-item.active
            a.nav-link(href='/addseats') Add Seats
            |
            span.sr-only (current)
          |             
          li.nav-item
            a.nav-link(href='/adminprofile') Admin Profile
             
          |
              
          li.nav-item
            a.nav-link(href='/logout') Logout       
          
  
    h1
        |
        span.badge.badge-default Add Seats   
    br
    .container
      

      form(action="/addseats" method="post",style='display: inline-block; border: 2px solid #BABDBC; background-color: #f1f1f1; width:60%; ' )
        .form-group.row
          label.col-sm-2.col-form-label(style='margin : 20px 0px 0px 50px;' align="right") Theatre ID :
          |       
          .col5
            input.form-control(name="t_id",placeholder='Theatre ID', type='text' style='margin : 20px 0px 0px 50px;' )
        |     
        .form-group.row
          label.col-sm-2.col-form-label(style='margin : 0px 0px 0px 50px;' align="right") Hall ID :
          |       
          .col5
            input.form-control(name="h_id",placeholder='Hall ID', type='text' style='margin : 0px 0px 0px 50px;')
        | 
        .form-group.row
          label.col-sm-2.col-form-label(style='margin : 0px 0px 0px 50px;' align="right") Seats ID :
          |       
          .col5
            input.form-control(name="s_id",placeholder='Hall Name', type='text' style='margin : 0px 0px 0px 50px;')
        | 
        .form-group.row
          label.col-sm-2.col-form-label(style='margin : 0px 0px 0px 50px;' align="right") Seats Name :
          |       
          .col5
            input.form-control(name="s_name",placeholder='Hall Name', type='text' style='margin : 0px 0px 0px 50px;')
        | 
        .form-group.row
          label.col-sm-2.col-form-label(style='margin : 0px 0px 0px 50px;' align="right") Seats Number :
          |       
          .col5
            input.form-control(name="s_num",placeholder='Hall Name', type='text' style='margin : 0px 0px 0px 50px;')
        |          
        
                            
        .form-group.row
          .offset-sm-2.col-sm-10
            button.btn.btn-warning.btn-lg(type='submit') Submit


    



  