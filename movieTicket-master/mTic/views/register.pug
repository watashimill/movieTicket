        .form-group.row
          .offset-sm-2.col-sm-10
            button.btn.btn-primary(value='Submit' , type='submit' ) Submit

            | 
            a.btn.btn-primary(href='/index' ,type='submit' style='background-color: #F7211A;') Cancel
  

  script.
    function regissuccess(){
        alert("SIGN UP SUCCESSFULL!!");
    }  

    $(document).ready(function () {
            $('#user-submit').click(function () {
                var payload = {
                    c_email: $('#emailRegis').val()
                };

                $.ajax({
                    url: "/register",
                    type: "POST",
                    contentType: "application/json",
                    processData: false,
                    data: JSON.stringify(payload),
                    complete: function (data) {
                        $('#output').html(data.responseText);
                    }
                });
            });
        });

  p#output
    



  